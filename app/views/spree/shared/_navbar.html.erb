<nav class="navbar row">
  <div class="col-md-8 col-md-offset-2">
    <!-- LOGO -->

    <div class="logo-group">
      <%= link_to root_path do %>
        <div class="navbar_logo">
          <%= image_tag "logo.png", alt: "logo image" %>
        </div>
      <% end %>
    </div>

    <!-- SHOPPING CART -->

    <div class="cart-group float-right">
      <% unless current_spree_user.nil? %>
        <%= link_to cart_path do %>
          <div class="inline-block"><i class="fa fa-shopping-cart fa-lg"></i></div>
            <div class="inline-block shopping-cart-count"><span><%#= current_spree_user.orders.where(state: "cart")[0].quantity %>0</span></div>
        <% end %>
      <% end %>
    </div>

    <!-- LOGIN/LOGOUT -->

    <div class="account-group float-right">
      <div class="dropdown">
        <a class="avatar-dropdown dropdown-toggle" href="#" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          <div class="avatar-round">
            <%= image_tag "quan_avatar.jpg" %>
          </div>
          <p class="avatar-name">Quan</p>
        </a>

        <div class="dropdown-menu dropdown-menu-right text-center" role="menu" aria-labelledby="dropdownMenuLink">
          <% if current_spree_user.nil? %>
            <%= link_to("Login", "/login", class: "dropdown-item")  %>
            <%= link_to("Sign up", "/signup", class: "dropdown-item") %>
          <% else %>
            <%= link_to("Logout", "/logout", class: "dropdown-item") %>
          <% end %>
        </div>
      </div>
    </div>

  </div>
</nav>
