<%= render "spree/shared/navbar" %>

<main class="container-fluid">
  <div data-hook="cart_container" class="row">
    <h1 class="text-center"><%= Spree.t(:shopping_cart) %></h1>

    <% if @order.line_items.empty? %>
      <div data-hook="empty_cart" class="col-md-8 col-md-offset-2">
        <div class="alert alert-info"><%= Spree.t(:your_cart_is_empty) %></div>
        <p><%= link_to Spree.t(:continue_shopping), products_path, class: 'btn btn-default' %></p>
      </div>
    <% else %>
      <div data-hook="outside_cart_form" class="col-md-8 col-md-offset-2">
        <%= form_for @order, url: update_cart_path, html: { id: 'update-cart' } do |order_form| %>
          <div>

            <div data-hook="cart_items" class="table-responsive">
              <%= render partial: 'form', locals: { order_form: order_form } %>
            </div>

            <div class="row">
              <div class="links col-md-3 navbar-form float-right text-right" data-hook="cart_buttons">
                <div class="form-group">
                  <%= button_tag class: 'btn btn-primary', id: 'update-button' do %>
                    <%= Spree.t(:update) %>
                  <% end %>
                  <%= button_tag class: 'btn btn-success', id: 'checkout-link', name: 'checkout' do %>
                    <%= Spree.t(:checkout) %>
                  <% end %>
                </div>
              </div>

              <div class='col-md-3'>
                <%= order_form.text_field :coupon_code, size: '30', class: 'form-control', placeholder: 'Coupon code' %>
                <br>
                <%= button_tag Spree.t(:coupon_code_apply), class: 'btn btn-default' %>
              </div>
            </div>
          </div>

        <% end %>
      </div>

      <br>
      <br>
      <div class="row">
        <div id="empty-cart" class="col-md-3 col-md-offset-2" data-hook>
          <%= form_tag empty_cart_path, method: :put do %>
            <p id="clear_cart_link" data-hook>
              <%= submit_tag Spree.t(:empty_cart), class: 'btn btn-default' %>
              <%= Spree.t(:or) %>
              <%= link_to Spree.t(:continue_shopping), products_path, class: 'continue' %>
            </p>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</main>
